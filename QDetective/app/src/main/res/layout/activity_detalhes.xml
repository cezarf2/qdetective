<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufc.quixada.qdetective.DetalhesActivity"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalhes"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="22dp"
        android:background="@android:color/holo_blue_bright"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:textColor="#000"
        android:paddingTop="10dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <TextView
        android:id="@+id/detalhe_denuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vias públicas de acesso"
        android:textColor="#000"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textColor="#000"
        android:paddingTop="10dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <TextView
        android:id="@+id/detalhe_data_denuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/12/2017"
        android:textColor="#000"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:textColor="#000"
        android:paddingTop="10dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <TextView
        android:id="@+id/detalhe_descricao_denuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lixo na rua"
        android:textColor="#000"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuário"
        android:textColor="#000"
        android:paddingTop="10dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <TextView
        android:id="@+id/detalhe_usuario_denuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leo Jaimesson"
        android:textColor="#000"
        android:paddingTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/detalhe_container_midia">
    </LinearLayout>

    <WebView
        android:id="@+id/mapa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></WebView>




</LinearLayout>
