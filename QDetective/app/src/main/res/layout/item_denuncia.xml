<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:textColor="#000"
        android:paddingTop="10dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <TextView
        android:id="@+id/categoria_denuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vias públicas de acesso"
        android:textColor="#000"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textColor="#000"
        android:paddingTop="10dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <TextView
        android:id="@+id/data_denuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/12/2017"
        android:textColor="#000"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:textColor="#000"
        android:paddingTop="10dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <TextView
        android:id="@+id/descricao_denuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lixo na rua"
        android:textColor="#000"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuário"
        android:textColor="#000"
        android:paddingTop="10dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <TextView
        android:id="@+id/usuario_denuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leo Jaimesson"
        android:textColor="#000"
        android:paddingTop="10dp"/>

</LinearLayout>